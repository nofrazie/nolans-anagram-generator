<h1 class="page-header text-center">Anagrams for <%= "(#{@word})" %></h1>
<h3 class="text-center"><a href="/" class="btn btn-danger">Type in New Word</a></h3>

<% if !@anagrams.nil? %>
  <% @anagrams.each do |anagram| %>
    <h2 class="col-md-6 col-md-offset-3 text-center"><%= anagram.text %></h2>
  <% end %>
<% end %>
